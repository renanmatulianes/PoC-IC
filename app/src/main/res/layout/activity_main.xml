<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagem do carro -->
    <ImageView
        android:id="@+id/carImg"
        android:layout_width="120dp"
        android:layout_height="245dp"
        android:contentDescription="@string/desc_img_carro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/car" />

    <!-- Sensor ESQUERDO -->

    <View
        android:id="@+id/gradientCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/gradient"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/leftSensorImg"
        android:layout_width="98dp"
        android:layout_height="147dp"
        android:layout_marginEnd="-15dp"
        android:visibility="gone"
        android:src="@drawable/vector_1"
        app:tint="@color/sensor_off"
        app:layout_constraintTop_toTopOf="@id/carImg"
        app:layout_constraintBottom_toBottomOf="@id/carImg"
        app:layout_constraintEnd_toStartOf="@id/carImg" />

    <!-- Sensor DIREITO -->
    <ImageView
        android:id="@+id/rightSensorImg"
        android:layout_width="98dp"
        android:layout_height="147dp"
        android:layout_marginStart="-15dp"
        android:rotation="180"
        android:visibility="gone"
        android:src="@drawable/vector_1"
        app:tint="@color/sensor_off"
        app:layout_constraintTop_toTopOf="@id/carImg"
        app:layout_constraintBottom_toBottomOf="@id/carImg"
        app:layout_constraintStart_toEndOf="@id/carImg" />

    <!-- Sensor CIMA -->
    <ImageView
        android:id="@+id/topSensorImg"
        android:layout_width="147dp"
        android:layout_height="98dp"
        android:layout_marginBottom="-20dp"
        android:visibility="gone"
        android:src="@drawable/vector_2"
        app:tint="@color/sensor_off"
        app:layout_constraintBottom_toTopOf="@id/carImg"
        app:layout_constraintStart_toStartOf="@id/carImg"
        app:layout_constraintEnd_toEndOf="@id/carImg" />

    <!-- Sensor BAIXO -->
    <ImageView
        android:id="@+id/bottomSensorImg"
        android:layout_width="147dp"
        android:layout_height="98dp"
        android:layout_marginTop="-20dp"
        android:rotation="180"
        android:visibility="gone"
        android:src="@drawable/vector_2"
        app:tint="@color/sensor_off"
        app:layout_constraintTop_toBottomOf="@id/carImg"
        app:layout_constraintStart_toStartOf="@id/carImg"
        app:layout_constraintEnd_toEndOf="@id/carImg" />




</androidx.constraintlayout.widget.ConstraintLayout>