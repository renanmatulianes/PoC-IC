<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Carro no centro -->
    <ImageView
        android:id="@+id/carImg"
        android:layout_width="120dp"
        android:layout_height="245dp"
        android:contentDescription="@string/desc_img_carro"
        android:src="@drawable/black_car"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Objeto ESQUERDA -->
    <ImageView
        android:id="@+id/leftObject"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:visibility="gone"
        android:contentDescription="@string/desc_incoming_object"
        app:layout_constraintStart_toStartOf="@id/leftPulse"
        app:layout_constraintTop_toTopOf="@id/leftPulse"
        app:layout_constraintBottom_toBottomOf="@id/leftPulse"
        android:layout_marginStart="24dp"/>

    <!-- Objeto DIREITA -->
    <ImageView
        android:id="@+id/rightObject"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:visibility="gone"
        android:contentDescription="@string/desc_incoming_object"
        app:layout_constraintEnd_toEndOf="@id/rightPulse"
        app:layout_constraintTop_toTopOf="@id/rightPulse"
        app:layout_constraintBottom_toBottomOf="@id/rightPulse"
        android:layout_marginEnd="24dp"/>

    <!-- Objeto TOPO -->
    <ImageView
        android:id="@+id/topObject"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        android:contentDescription="@string/desc_incoming_object"
        app:layout_constraintStart_toStartOf="@id/topPulse"
        app:layout_constraintEnd_toEndOf="@id/topPulse"
        app:layout_constraintTop_toTopOf="@id/topPulse"
        android:layout_marginTop="24dp"/>

    <!-- Objeto BAIXO -->
    <ImageView
        android:id="@+id/bottomObject"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/bottomPulse"
        app:layout_constraintEnd_toEndOf="@id/bottomPulse"
        app:layout_constraintBottom_toBottomOf="@id/bottomPulse"
        android:layout_marginBottom="24dp"/>

    <!-- Seta à esquerda -->
    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        android:src="@drawable/alert_cone"
        app:layout_constraintEnd_toStartOf="@id/carImg"
        app:layout_constraintTop_toTopOf="@id/carImg"
        app:layout_constraintBottom_toBottomOf="@id/carImg"
        android:layout_marginEnd="8dp"/>

    <!-- Seta à direita -->
    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        android:src="@drawable/alert_cone"
        app:layout_constraintStart_toEndOf="@id/carImg"
        app:layout_constraintTop_toTopOf="@id/carImg"
        app:layout_constraintBottom_toBottomOf="@id/carImg"
        android:layout_marginStart="8dp"/>

    <!-- Seta em cima -->
    <ImageView
        android:id="@+id/topArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        android:src="@drawable/alert_cone"
        app:layout_constraintBottom_toTopOf="@id/carImg"
        app:layout_constraintStart_toStartOf="@id/carImg"
        app:layout_constraintEnd_toEndOf="@id/carImg"
        android:layout_marginBottom="8dp"/>

    <!-- Seta embaixo -->
    <ImageView
        android:id="@+id/bottomArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        android:src="@drawable/alert_cone"
        app:layout_constraintTop_toBottomOf="@id/carImg"
        app:layout_constraintStart_toStartOf="@id/carImg"
        app:layout_constraintEnd_toEndOf="@id/carImg"
        android:layout_marginTop="8dp"/>

    <!-- Pulso ESQUERDA -->
    <View
        android:id="@+id/leftPulse"
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Pulso DIREITA -->
    <View
        android:id="@+id/rightPulse"
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@drawable/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Pulso TOPO -->
    <View
        android:id="@+id/topPulse"
        android:layout_width="0dp"
        android:layout_height="1200dp"
        android:visibility="gone"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Pulso BAIXO -->
    <View
        android:id="@+id/bottomPulse"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:visibility="gone"
        android:background="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="52dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/settings" />

</androidx.constraintlayout.widget.ConstraintLayout>
